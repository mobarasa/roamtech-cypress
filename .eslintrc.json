{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "cypress/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:cypress/recommended"
    ],
    "plugins": [
        "cypress"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "cypress/no-unnecessary-waiting": "warn",
        "cypress/no-assigning-return-values": "error",
        "cypress/assertion-before-screenshot": "warn",
        "no-console": "off"
    }
}