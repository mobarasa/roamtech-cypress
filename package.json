{
  "name": "roamtech-cypress",
  "version": "1.0.0",
  "description": "Cypress testing framework for roamtech applications",
  "homepage": "https://github.com/mobarasa/roamtech-cypress#readme",
  "bugs": {
    "url": "https://github.com/mobarasa/roamtech-cypress/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mobarasa/roamtech-cypress.git"
  },
  "license": "ISC",
  "author": "Mike Barasa",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "setup": "cp .env.example.json .env.json",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    "cy:run:edge": "cypress run --browser edge",

    "test": "cypress run",
    "test:api": "cypress run --spec 'cypress/e2e/api/**/*.cy.js'",
    "test:functional": "cypress run --spec 'cypress/e2e/functional/**/*.cy.js'",
    "test:regression": "cypress run --spec 'cypress/e2e/regression/**/*.cy.js'",
    "test:security": "cypress run --spec 'cypress/e2e/security/**/*.cy.js'",
    "test:integration": "cypress run --spec 'cypress/e2e/integration/**/*.cy.js'",
    "test:performance": "cypress run --spec 'cypress/e2e/performance/**/*.cy.js'",
    "test:mobile": "cypress run --config viewportWidth=375,viewportHeight=667",

    "test:headed": "cypress run --headed",
    "test:smoke": "cypress run --env grepTags=@smoke",
    "test:parallel": "cypress run --record --parallel --group 'Parallel Tests'",

    "report:merge": "mochawesome-merge cypress/results/mochawesome/*.json > cypress/results/mochawesome/report.json",
    "report:generate": "marge cypress/results/mochawesome/report.json -f report -o cypress/results/mochawesome",
    "report:open": "open cypress/results/mochawesome/report.html",

    "lint": "eslint cypress/**/*.js",
    "lint:fix": "eslint cypress/**/*.js --fix",
    "format": "prettier --write 'cypress/**/*.{js,json}'",

    "clean": "rm -rf cypress/results cypress/screenshots cypress/videos",
    "pretest": "npm run clean"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "cypress": "^15.5.0",
    "cypress-multi-reporters": "^2.0.5",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "eslint-plugin-cypress": "^5.2.0",
    "mocha-junit-reporter": "^2.2.1",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "prettier": "^3.6.2",
    "start-server-and-test": "^2.1.2"
  }
}
